[root]
size=3G
type=ext3
mountpoint=/
options=sync,errors=remount-ro

[swap]
size=512M
type=swap

[tmp]
size=0.5G
type=ext3
mountpoint=/tmp
options=nodev,nosuid

[usrsharelcs]
size=10G
type=ext3
mountpoint=/usr/share/lcs
options=defaults

[var]
size=7G
type=ext3
mountpoint=/var
options=nodev,nosuid

[var-log]
size=10G
type=ext3
mountpoint=/var/log
options=options=sync,errors=remount-ro

[varwww]
size=10G
type=ext3
mountpoint=/var/www
options=nodev,nosuid

[varspoolsquid]
size=@@CACHESIZE@@G
type=ext3
mountpoint=/var/spool/squid
options=nodev,nosuid

[home]
size=@@HOMESIZE@@G
type=ext3
mountpoint=/home
options=nodev,nosuid
