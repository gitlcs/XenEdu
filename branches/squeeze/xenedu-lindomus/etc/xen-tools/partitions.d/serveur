[root]
size=2G
type=ext3
mountpoint=/
options=sync,errors=remount-ro

[swap]
size=512M
type=swap

[tmp]
size=0.5G
type=ext3
mountpoint=/tmp
options=nodev,nosuid

[usr]
size=5G
type=ext3
mountpoint=/usr
options=defaults

[var]
size=5G
type=ext3
mountpoint=/var
options=nodev,nosuid

[var-log]
size=5G
type=ext3
mountpoint=/var/log
options=options=sync,errors=remount-ro
